{
  "name": "markdownlint-shell",
  "version": "0.1.0",
  "description": "Custom markdownlint rules for validating shell tree code fences and annotations.",
  "type": "module",
  "main": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "files": [
    "dist",
    "docs/rules",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run build && npm run test",
    "docs:build": "node scripts/build-docs.mjs",
    "prepare": "npm run build"
  },
  "keywords": [
    "markdownlint",
    "markdownlint-rule",
    "shell",
    "tree"
  ],
  "license": "MIT",
  "devDependencies": {
    "vitest": "^3.2.4",
    "marked": "^15.0.6"
  },
  "dependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
