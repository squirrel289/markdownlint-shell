{
  "name": "markdownlint-shell",
  "version": "0.2.0",
  "description": "Custom markdownlint rules for validating shell tree code fences and annotations.",
  "type": "module",
  "main": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./schemas/markdownlint-shell.schema.json": "./schemas/markdownlint-shell.schema.json"
  },
  "files": [
    "dist",
    "docs/rules",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf dist && npx --yes --package typescript@5.9.2 --package @types/node@24.3.0 tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run build && npm run test",
    "docs:build": "node scripts/build-docs.mjs",
    "prepare": "npm run build"
  },
  "keywords": [
    "markdownlint",
    "markdownlint-rule",
    "shell",
    "tree"
  ],
  "license": "MIT",
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "vitest": "^3.2.4",
    "marked": "^15.0.6",
    "typescript": "^5.9.2",
    "@types/node": "^24.3.0"
  }
}
